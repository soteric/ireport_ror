<% if notice %>
<div class="alert alert-success" id="notice"><%= notice %></div>
<% end %>
<div class="panel panel-primary">
  <!-- Default panel contents -->
  <div class="panel-heading">Showing Module</div>
  <div class="panel-body">
	<%= link_to 'Back', sfmodules_path %>
  </div>
	
	<table class="table">
	    <thead>
	      <td>ID</td>
	      <td>Module Name</td>
	      <td>Pillar</td>
	      <td>Created At</td>
	      <td>Updated At</td>
	      <td>Actions</td>
	    </thead>
	    <tbody>
	        <tr>
	          <td><%= @sfmodule.id %></td>
	          <td><%= @sfmodule.name %></td>
	          <td><%= @sfmodule.pillar_id %></td>
	          <td><%= @sfmodule.created_at %></td>
	          <td><%= @sfmodule.updated_at %></td>
	          <td>
	            <%= link_to '<i class="fa fa-pencil-square-o"></i> Edit'.html_safe, edit_sfmodule_path, class: "label label-primary" %>
	            <%= link_to '<i class="fa fa-times"></i> Remove'.html_safe, sfmodule_path, method: :delete, data: { confirm: 'It will remove all associated projects under this sfmodule. Are you sure you really want to remove this sfmodule?' }, class: "label label-danger" %>
	          </td>
	        </tr>
	    </tbody>
	  </table>

</div>

<br>