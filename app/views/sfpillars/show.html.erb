<% if notice %>
<div class="alert alert-success" id="notice"><%= notice %></div>
<% end %>
<div class="panel panel-primary">
  <!-- Default panel contents -->
  <div class="panel-heading">Showing Pillar</div>
  <div class="panel-body">
	<%= link_to 'Back', sfpillars_path %>
  </div>
	
	<table class="table">
	    <thead>
	      <td>ID</td>
	      <td>Pillar Name</td>
	      <td>Created At</td>
	      <td>Updated At</td>
	      <td>Actions</td>
	    </thead>
	    <tbody>
	        <tr>
	          <td><%= @sfpillar.id %></td>
	          <td><%= link_to @sfpillar.name, @sfpillar %></td>
	          <td><%= @sfpillar.created_at %></td>
	          <td><%= @sfpillar.updated_at %></td>
	          <td>
	            <%= link_to '<i class="fa fa-pencil-square-o"></i> Edit'.html_safe, edit_sfpillar_path, class: "label label-primary" %>
	            <%= link_to '<i class="fa fa-times"></i> Remove'.html_safe, sfpillar_path, method: :delete, data: { confirm: 'It will remove all associated projects under this release. Are you sure you really want to remove this release?' }, class: "label label-danger" %>
	          </td>
	        </tr>
	    </tbody>
	  </table>

</div>

<br>